{
	"id": "io.github.flattool.Warehouse",
	"runtime": "org.gnome.Platform",
	"runtime-version": "49",
	"sdk": "org.gnome.Sdk",
	"command": "warehouse",
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--device=dri",
		"--socket=wayland",
		"--talk-name=org.freedesktop.Flatpak",
		"--filesystem=/var/lib/flatpak/:ro",
		"--filesystem=~/.local/share/flatpak/:ro",
		"--filesystem=~/.var/app/",
		"--filesystem=host-etc"
	],
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/man",
		"/share/doc",
		"/share/gtk-doc",
		"/share/man",
		"/share/pkgconfig",
		"*.la",
		"*.a"
	],
	"modules": [
		{
			"name": "blueprint-compiler",
			"buildsystem": "meson",
			"sources": [
				{
					"type": "git",
					"url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
					"tag": "v0.18.0"
				}
			],
			"cleanup": ["*"]
		},
		{
			"name": "warehouse",
			"builddir": true,
			"buildsystem": "meson",
			"config-opts": ["-Dprofile=development"],
			"sources": [
				{
					"type": "dir",
					"path": ".."
				}
			]
		}
	]
}
